{
  "manifest_version": 3,
  "name": "Terms & Conditions Analyzer",
  "version": "1.0",
  "description": "Summarize user-selected terms and conditions.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "128": "icon.png"
  }
}
